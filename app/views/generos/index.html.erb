
<h1>Géneros</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @generos.each do |genero| %>
      <tr>
        <td><%= genero.nombre %></td>
        <td><%= link_to 'Mostrar', genero %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nuevo Género', new_genero_path, class: 'btn btn-primary' %>