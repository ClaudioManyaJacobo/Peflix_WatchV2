<!DOCTYPE html>
<html>
  <head>
    <title>Peliculizate Watch</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= stylesheet_link_tag 'peliculas', media: 'all' %>
  </head>

  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Peliculizate Watch" %></title>
    <%= favicon_link_tag 'favicon.png', rel: 'icon', type: 'image/png', id: 'dynamic-favicon' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>
  
  <body>
    <%= alert %>
    <%= notice %>
    <%= yield %>
  </body>
